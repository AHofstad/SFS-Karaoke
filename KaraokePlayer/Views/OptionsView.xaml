<UserControl x:Class="KaraokePlayer.Views.OptionsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:loc="clr-namespace:KaraokePlayer.Localization"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
  <UserControl.Resources>
    <sys:Double x:Key="OptionsBaseWidth">640</sys:Double>
    <sys:Double x:Key="OptionsBaseHeight">460</sys:Double>
    <Thickness x:Key="OptionsPadding">28</Thickness>
    <sys:Double x:Key="OptionsTitleSize">24</sys:Double>
    <sys:Double x:Key="OptionsLabelSize">14</sys:Double>
    <sys:Double x:Key="OptionsControlHeight">34</sys:Double>
    <sys:Double x:Key="OptionsComboWidth">300</sys:Double>
    <sys:Double x:Key="OptionsTextBoxMinWidth">320</sys:Double>
    <sys:Double x:Key="OptionsButtonMinWidth">110</sys:Double>
  </UserControl.Resources>

  <Viewbox Stretch="Uniform" StretchDirection="Both">
    <Grid Width="{StaticResource OptionsBaseWidth}" Height="{StaticResource OptionsBaseHeight}">
      <Border Background="#191A1E" CornerRadius="14" Padding="{StaticResource OptionsPadding}">
        <Grid>
          <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
          </Grid.RowDefinitions>

          <TextBlock x:Name="OptionsTitleText"
                     Text="{Binding [OptionsTitle], Source={x:Static loc:LocalizationService.Instance}}"
                     Foreground="{DynamicResource TextBrush}" FontSize="{StaticResource OptionsTitleSize}" FontWeight="Bold"
                     HorizontalAlignment="Center" TextAlignment="Center" />

          <StackPanel Grid.Row="1" Margin="0,16,0,0" HorizontalAlignment="Center">
            <TextBlock x:Name="LanguageLabelText"
                       Text="{Binding [LanguageLabel], Source={x:Static loc:LocalizationService.Instance}}"
                       Foreground="{DynamicResource MutedTextBrush}" FontSize="{StaticResource OptionsLabelSize}" TextAlignment="Center" />
            <ComboBox Margin="0,8,0,0" Width="{StaticResource OptionsComboWidth}" Height="{StaticResource OptionsControlHeight}"
                      ItemsSource="{Binding Languages, Source={x:Static loc:LocalizationService.Instance}}"
                      SelectedItem="{Binding CurrentLanguage, Source={x:Static loc:LocalizationService.Instance}}"
                      DisplayMemberPath="DisplayName" />
          </StackPanel>

          <StackPanel Grid.Row="2" Margin="0,20,0,0" HorizontalAlignment="Center">
            <TextBlock x:Name="WindowModeLabelText"
                       Text="{Binding [WindowModeLabel], Source={x:Static loc:LocalizationService.Instance}}"
                       Foreground="{DynamicResource MutedTextBrush}" FontSize="{StaticResource OptionsLabelSize}" TextAlignment="Center" />
            <ComboBox Margin="0,8,0,0" Width="{StaticResource OptionsComboWidth}" Height="{StaticResource OptionsControlHeight}"
                      ItemsSource="{Binding WindowModes}"
                      SelectedItem="{Binding WindowMode}"
                      DisplayMemberPath="DisplayName" />
          </StackPanel>

          <StackPanel Grid.Row="3" Margin="0,20,0,0" HorizontalAlignment="Center">
            <TextBlock x:Name="SongsFolderLabelText"
                       Text="{Binding [SongsFolderLabel], Source={x:Static loc:LocalizationService.Instance}}"
                       Foreground="{DynamicResource MutedTextBrush}" FontSize="{StaticResource OptionsLabelSize}" TextAlignment="Center" />
            <Grid Margin="0,8,0,0">
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
              </Grid.ColumnDefinitions>
              <TextBox Text="{Binding SongsFolderPath}" MinWidth="{StaticResource OptionsTextBoxMinWidth}"
                       Height="{StaticResource OptionsControlHeight}" IsReadOnly="True" />
              <Button Grid.Column="1" Content="{Binding [BrowseButton], Source={x:Static loc:LocalizationService.Instance}}"
                      MinWidth="{StaticResource OptionsButtonMinWidth}" Height="{StaticResource OptionsControlHeight}"
                      Margin="10,0,0,0" Click="BrowseSongsFolder_Click" />
            </Grid>
          </StackPanel>

          <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="{Binding [CloseButton], Source={x:Static loc:LocalizationService.Instance}}"
                    MinWidth="{StaticResource OptionsButtonMinWidth}" Height="36" Click="CloseOptions_Click" />
          </StackPanel>
        </Grid>
      </Border>
    </Grid>
  </Viewbox>
</UserControl>
